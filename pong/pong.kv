#:kivy 2.1.0

<PongGame>:
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        text: "0"
        font_size: 70
        center_x: root.width * 1/4
        top: root.top - 50
    
    Label:
        text: "0"
        font_size: 70
        center_x: root.width * 3/4
        top: root.top - 50