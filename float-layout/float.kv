<Button>:
    font_size: 40
    color: 0.8, 0.2, 0.5, 1
    size_hint: 0.8, 0.3

<FloatLayout>:
    Button:
        pos_hint: {"x": 0.1, "top": 0.9}
        text: "Hello World"
    Button:
        id: btn
        pos_hint: {"x": 0.1, "y": 0.1}
        text: "Cedric" if btn.state == "normal" else "Cool"
        background_color: 0.95, 0.95, 0.95, 1
