#:kivy 2.1.0

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .5
        Rectangle:
            size: self.size
    Label: 
        text: "TITLE"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
    Button:
        text: "OK"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        size_hint: 0.2, 0.1
        on_press: root.parent.on_menu_button_pressed()