WidgetsExample:

<WidgetsExample>:
    cols: 3
    ToggleButton:
        id: toggle
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        id: btn
        text: "Count"
        on_press: root.on_button_click()
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1,0.5,1,1

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:


<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>:
    # L->R or T->B
    # orientation: "rl-bt"
    # left, top, right, bottom
    # padding: ("20dp", "20dp", "20dp", "20dp")
    # H, V
    # spacing: "20dp", "20dp"

<GridLayoutExample@GridLayout>:
    cols: 3
    Button:
        text: "A"
        size_hint: None, 1
        width: "60dp"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExample>:
    # right, left, center
    anchor_x: "left"
    # bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .5,.2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size: "100dp", "200dp"
        size_hint: None, None
        # x, center_x, right
        # y, center_y, top
        pos_hint: {"center_y":0.5}
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Label:
        text: "C"
        size_hint: None, 1
        width: 200
        pos_hint: {"x":0.15}


<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "100dp"
        color: 0,0,1,1

    Label:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "300dp", "100dp"
        color: 1,0,1,1