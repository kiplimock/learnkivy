<WidgetsExample>:
    cols: 3
    ToggleButton:
        id: toggle
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        id: btn
        text: "Count"
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1,0.5,1,1
    Switch:
        id: switch
        active: True
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: slider
        min: 0
        max: 100
        value: 50
        disabled: not switch.active
        # on_value: root.on_slider_value(self)
        orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "50dp"
            color: 1,0,1,1
        ProgressBar:
            max: 100
            value: int(slider.value)
    TextInput:
        id: ti
        text: "foobar"
        size_hint: None, 1
        width: "100dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Name: " + root.text_input

